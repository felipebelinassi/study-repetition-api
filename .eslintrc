{
	"env": {
		"node": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"airbnb-typescript/base",
		"prettier"
	],
	"plugins": ["prettier"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json"
	},
	"rules": {
		"class-methods-use-this": "off",
		"max-classes-per-file": "off"
	}
}
